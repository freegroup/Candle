#:import SayButton controls.say_button.SayButton

<Header>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(120) 

    BoxLayout:

        SayButton:
            text: root.text
            say: root.say
            vibrate: 2
            size_hint_x: 1
            action: root.announce
            font_size: '25sp'
            bold: True
            halign: 'center'

    Widget:  
        size_hint_y: None
        height: dp(10)
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size