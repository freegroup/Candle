<SayButton>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(64) 

    BoxLayout:

        CustomButton:
            text: "-"
            size_hint_x: 1
            on_release: root.tts(root.say)

        CustomButton:
            text: root.text
            size_hint_x: 4
            on_release: root.on_button_release()
