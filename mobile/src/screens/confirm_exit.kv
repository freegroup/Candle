#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import BorderWidget controls.border_widget.BorderWidget
#:import _ utils.i18n._

<ConfirmExit>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Bestätigung Programmende')
            say: _('Bitte bestätigen Sie, dass sie das Programm beenden wollen')


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space
            spacing: 10
            padding: 10


            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '64dp'
            spacing: 10

            SayButton:
                text: _('Beenden')
                say: _('Programm beenden')
                vibrate: 2
                action: app.terminate
                halign: 'center'

            SayButton:
                text: _('Nicht beenden')
                say: _('Programm nicht beenden')
                vibrate: 2
                action: app.close_popup
                halign: 'center'



