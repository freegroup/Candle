#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import _ utils.i18n._

<Main>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Hauptmenu')
            say: _('Sie sind im Hauptmenu')


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space
            spacing: 10
            padding: 10

            # Add your SayButtons here
            SayButton:
                text: _('Wo bin ich')
                say: _('Ihr aktuellen Standort ermitteln')
                action: root.location

            SayButton:
                text: _('Kompass')
                say: _('Kompass')
                action: app.navigate_to_compass

            SayButton:
                text: _('Favoriten')
                say: _('Favoriten')
                action: app.navigate_to_favoriten

            SayButton:
                text: _('Uhrzeit')
                say: _('Uhrzeit und Datum ansagen')
                action: root.daytime

            SayButton:
                text: _('Einstellungen')
                say: _('Einstellungen')
                action: app.navigate_to_settings

            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 10

            SayButton:
                text: _('Beenden')
                say: _('Programm beenden')
                action: app.request_terminate
                halign: 'center'

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')
                halign: 'center'



