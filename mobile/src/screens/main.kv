#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import _ utils.i18n._

<Main>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Hauptmenu')
            say: _('Sie sind im Hauptmenu')


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space


            # Add your SayButtons here
            SayButton:
                say: _('Ihr derzeitigne Standort ermitteln und Vorlesen')
                text: _('Standort')
                action: root.location

            SayButton:
                say: _('Navigation')
                text: _('Navigation')

            SayButton:
                say: _('Routen verwalten.')
                text: _('Routen Verwalten')

            SayButton:
                say: _('Routen aufzeichnen.')
                text: _('Routen aufzeichnen')
                action: app.navigate_to_record

            SayButton:
                say: _('Kompass')
                text: _('Kompass')
                action: app.navigate_to_compass

            SayButton:
                say: _('Einstellungen')
                text: _('Einstellungen')
                action: app.navigate_to_settings

            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '48dp'

            SayButton:
                text: _('Beenden')
                say: _('Programm beenden')
                action: app.request_terminate

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')



