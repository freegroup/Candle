#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header

<Record>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: 'Routen Aufzeichnen'
            say: 'Untermenu: Route aufzeichnen'


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space


            # Add your SayButtons here
            SayButton:
                say: 'Aufzeichnung starten'
                text: 'Aufzeichnung starten'


            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '48dp'

            SayButton:
                text: 'Zurück'
                say: 'Zurück ins Hauptmenü'
                action: app.main

            SayButton:
                text: 'Hilfe'
                say: 'Hilfe'



