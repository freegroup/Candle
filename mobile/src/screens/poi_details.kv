#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import BorderWidget controls.border_widget.BorderWidget
#:import Swipe controls.swipe_box.Swipe
#:import _ utils.i18n._

<PoiDetails>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Ort Details')
            say: _('Untermenu: Ort Details')

        Swipe:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space
            spacing: 10
            padding: 10
            swipe_right: root.back

            SayButton:
                text: _('Navigation Starten')
                say: _('Navigation Starten')
                size_hint_y: 1

            SayButton:
                text: _('Richtung anzeigen')
                say: _('Richtung anzeigen')
                size_hint_y: 1

            SayButton:
                text: _('Umbenennen')
                say: _('Ort umbenennen')
                size_hint_y: 1

            SayButton:
                text: _('Löschen')
                say: _('Ort löschen')
                size_hint_y: 1

            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1
            BorderWidget:
                size_hint_y: 1

        BoxLayout:
            size_hint_y: None
            height: '64dp'
            spacing: 10

            SayButton:
                text: _('Zurück')
                say: _('Zurück zur Orte')
                vibrate: 2
                action: root.back
                halign: 'center'

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')
                vibrate: 2
                halign: 'center'



