#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import BorderWidget controls.border_widget.BorderWidget
#:import Swipe controls.swipe_box.Swipe
#:import _ utils.i18n._

<Permissions>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Android Berechtigungen')
            say: _('Untermenü: App Berechtigungen anfordern')

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space
            spacing: 10
            padding: 10

            SayButton:
                text: _('App Berechtigungen')
                say: _('App Berechtigungen für GPS, Bluetooth und den Kompass erfragen')
                action: root.request_permissions

            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '64dp'
            spacing: 10

            Widget:

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')
                vibrate: 2
                halign: 'center'



