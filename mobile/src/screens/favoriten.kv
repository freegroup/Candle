#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import _ utils.i18n._

<Favoriten>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Favoriten')
            say: _('Untermenu: Favoriten')


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space
            spacing: 10
            padding: 10


            # Add your SayButtons here
            SayButton:
                text: _('Standort speichern')
                say: _('Ihren aktuellen Standort speichern')

            SayButton:
                text: _('Orte')
                say: _('Gespeicherte Orte')

            SayButton:
                text: _('Strecken')
                say: _('Aufgezeichnete Strecken')

            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 10

            SayButton:
                text: _('Zurück')
                say: _('Zurück ins Hauptmenü')
                action: app.navigate_to_main
                halign: 'center'

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')
                halign: 'center'



