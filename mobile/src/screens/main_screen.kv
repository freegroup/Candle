#:import SayButton controls.say_button.SayButton

<MainScreen>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        # Header
        Button:
            text: 'Header'
            size_hint_y: None
            height: '64dp'  # Adjust the height as needed

        # SayButtons Container
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1  # Take up the remaining space


            # Add your SayButtons here
            SayButton:
                say: 'Navigation'
                text: 'Navigation'

            SayButton:
                say: 'Routen verwalten.'
                text: 'Routen Verwalten'

            SayButton:
                say: 'Routen aufzeichnen.'
                text: 'Routen Aufzeichnen'


            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1

        # Footer
        BoxLayout:
            size_hint_y: None
            height: '48dp'  # Adjust the height as needed

            Button:
                text: 'Back'
            Button:
                text: 'Help'



