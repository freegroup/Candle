#:import SayButton controls.say_button.SayButton
#:import Header controls.header.Header
#:import BorderWidget controls.border_widget.BorderWidget
#:import ScrollView kivy.uix.scrollview.ScrollView
#:import Label kivy.uix.label.Label
#:import Swipe controls.swipe_box.Swipe
#:import _ utils.i18n._

<SelectDevice>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Header:
            id: header
            text: _('Einstellungen')
            say: _('Untermenü: Einstellungen')


        Swipe:
            orientation: 'vertical'
            size_hint_y: 1
            id: devices_list
            spacing: 10
            padding: 10
            swipe_right: root.back

            SayButton:
                text: _('Geräte suchen..')
                say: _('Sie sind mit keinem Gerät verbunden. Klicke um Geräte zu suchen')
                action: root.start_ble_scan

            # Spacer to push SayButtons to the top
            Widget:
                size_hint_y: 1


        BoxLayout:
            size_hint_y: None
            height: '64dp'
            spacing: 10

            SayButton:
                text: _('Zurück')
                say: _('Zurück ins Hauptmenü')
                vibrate: 2
                action: root.back
                halign: 'center'

            SayButton:
                text: _('Hilfe')
                say: _('Hilfe')
                vibrate: 2
                halign: 'center'
